#!/usr/bin/python3
class Person:
    def __init__(self, name):
        self.name = name

    def say_hi(self):
        print('Hello, my name is', self.name)

p = Person('Swaroop')
p = Person('Jefffff')
p.say_hi()

Person('Big Daddy').say_hi()
# The previous 2 lines can also be written as
# Person('Swaroop').say_hi()
